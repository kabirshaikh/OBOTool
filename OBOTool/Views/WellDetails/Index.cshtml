                @Html.DisplayNameFor(model => model.ProposedFormation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th>
