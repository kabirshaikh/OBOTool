<table class="display" id="wellsIndex">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duwi)
